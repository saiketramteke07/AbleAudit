<% layout('layouts/boilerplate') %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h1 class="h3 mb-0">New Accessibility Analysis</h1>
      </div>
      <div class="card-body">
        <form action="/analysis/run" method="POST">
          <div class="mb-3">
            <label for="url" class="form-label">Website URL</label>
            <input 
              type="url" 
              class="form-control" 
              id="url" 
              name="url" 
              placeholder="https://example.com" 
              required
            >
            <div class="form-text">Enter the full URL including https:// or http://</div>
          </div>
          
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">
              <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true" id="loading-spinner"></span>
              Run Analysis
            </button>
          </div>
        </form>
      </div>
    </div>
    
    <div class="card mt-4">
      <div class="card-header">
        <h2 class="h5 mb-0">What We Check</h2>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <ul class="list-unstyled">
              <li><i class="bi bi-check-circle-fill text-success"></i> Color contrast issues</li>
              <li><i class="bi bi-check-circle-fill text-success"></i> Missing alternative text</li>
              <li><i class="bi bi-check-circle-fill text-success"></i> Keyboard accessibility</li>
              <li><i class="bi bi-check-circle-fill text-success"></i> ARIA attributes</li>
            </ul>
          </div>
          <div class="col-md-6">
            <ul class="list-unstyled">
              <li><i class="bi bi-check-circle-fill text-success"></i> Form accessibility</li>
              <li><i class="bi bi-check-circle-fill text-success"></i> Document structure</li>
              <li><i class="bi bi-check-circle-fill text-success"></i> Navigation issues</li>
              <li><i class="bi bi-check-circle-fill text-success"></i> And many more...</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Show loading spinner when form is submitted
  document.querySelector('form').addEventListener('submit', function() {
    document.getElementById('loading-spinner').classList.remove('d-none');
  });
</script>

